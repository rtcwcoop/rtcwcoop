		accum 0 random 3
		wait 5
		trigger crane1 eventa
		wait 5
		trigger crane1 eventb
 		wait 5
		trigger crane1 eventc
	}
 
	trigger eventa
	{
		accum 0 abort_if_not_equal 0
		alertentity nazi17
	}

